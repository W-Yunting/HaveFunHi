
.goods-list {
		width: 100vw;
		height: 100vh;
		padding: 10px;
		display: flex;
		flex-direction: row;
		flex-wrap: wrap;
		justify-content: space-around;
}
.good-item {
		display: flex;
		flex-direction: column;
		margin-bottom: 10px;
		width: 48%;
		height: 200px;
		overflow: hidden;
		align-self: center;
}
.good-img {
		width: 120px;
		height: 120px;
		object-fit: cover;
}
.good-info {
		font-size: 13px;
		color: #666;
}
